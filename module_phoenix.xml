<?xml version="1.0" encoding="UTF-8"?>
<project name="module_phoenix" default="compile.module.phoenix">
  <dirname property="module.phoenix.basedir" file="${ant.file.module_phoenix}"/>
  
  <property name="module.jdk.home.phoenix" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.phoenix" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.phoenix" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.phoenix" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="phoenix.output.dir" value="${module.phoenix.basedir}/bin"/>
  <property name="phoenix.testoutput.dir" value="${module.phoenix.basedir}/bin"/>
  
  <path id="phoenix.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="phoenix.module.production.classpath">
    <path refid="${module.jdk.classpath.phoenix}"/>
    <pathelement location="${basedir}/../libraries/jintellitype-1.3.9/jintellitype-1.3.9.jar"/>
    <pathelement location="${basedir}/../libraries/jaudiotagger/jaudiotagger-2.2.4.jar"/>
    <pathelement location="${basedir}/../libraries/db-derby-10.12.1.1-bin/lib/derby.jar"/>
    <path refid="library.dll.classpath"/>
  </path>
  
  <path id="phoenix.runtime.production.module.classpath">
    <pathelement location="${phoenix.output.dir}"/>
    <pathelement location="${basedir}/../libraries/jintellitype-1.3.9/jintellitype-1.3.9.jar"/>
    <pathelement location="${basedir}/../libraries/jaudiotagger/jaudiotagger-2.2.4.jar"/>
    <pathelement location="${basedir}/../libraries/db-derby-10.12.1.1-bin/lib/derby.jar"/>
    <path refid="library.dll.classpath"/>
  </path>
  
  <path id="phoenix.module.classpath">
    <pathelement location="${phoenix.output.dir}"/>
    <path refid="${module.jdk.classpath.phoenix}"/>
    <pathelement location="${basedir}/../libraries/jintellitype-1.3.9/jintellitype-1.3.9.jar"/>
    <pathelement location="${basedir}/../libraries/jaudiotagger/jaudiotagger-2.2.4.jar"/>
    <pathelement location="${basedir}/../libraries/db-derby-10.12.1.1-bin/lib/derby.jar"/>
    <path refid="library.dll.classpath"/>
  </path>
  
  <path id="phoenix.runtime.module.classpath">
    <pathelement location="${phoenix.output.dir}"/>
    <pathelement location="${basedir}/../libraries/jintellitype-1.3.9/jintellitype-1.3.9.jar"/>
    <pathelement location="${basedir}/../libraries/jaudiotagger/jaudiotagger-2.2.4.jar"/>
    <pathelement location="${basedir}/../libraries/db-derby-10.12.1.1-bin/lib/derby.jar"/>
    <path refid="library.dll.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.phoenix">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.phoenix">
    <patternset refid="excluded.from.module.phoenix"/>
  </patternset>
  
  <path id="phoenix.module.sourcepath">
    <dirset dir="${module.phoenix.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.phoenix" depends="compile.module.phoenix.production,compile.module.phoenix.tests" description="Compile module Phoenix"/>
  
  <target name="compile.module.phoenix.production" depends="register.custom.compilers" description="Compile module Phoenix; production classes">
    <mkdir dir="${phoenix.output.dir}"/>
    <javac2 destdir="${phoenix.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.phoenix}/javac">
      <compilerarg line="${compiler.args.phoenix}"/>
      <bootclasspath refid="phoenix.module.bootclasspath"/>
      <classpath refid="phoenix.module.production.classpath"/>
      <src refid="phoenix.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.phoenix"/>
    </javac2>
    
    <copy todir="${phoenix.output.dir}">
      <fileset dir="${module.phoenix.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.phoenix.tests" depends="register.custom.compilers,compile.module.phoenix.production" description="compile module Phoenix; test classes" unless="skip.tests"/>
  
  <target name="clean.module.phoenix" description="cleanup module">
    <delete dir="${phoenix.output.dir}"/>
    <delete dir="${phoenix.testoutput.dir}"/>
  </target>
</project>