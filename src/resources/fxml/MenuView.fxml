<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #E8E8E8; -fx-border-width: 0 0 1 0; -fx-border-color: #878787;" alignment="TOP_LEFT"
stylesheets="/resources/css/StyleClasses.css" fx:controller="application.controllers.MenuController">
    <ImageView>
    	<image>
        	<Image url="@/resources/icons/icon_phoenix.png"/>
    	</image>
	</ImageView>
	<fx:define>
		<ToggleGroup fx:id="view"/>
	</fx:define>
	<ToggleButton fx:id="mediaplayer" text = "Mediaplayer" prefHeight="35" prefWidth="110" toggleGroup="$view" onAction="#switchToMediaplayer" style="-fx-border-width: 0 1 0 0;">
		<tooltip><Tooltip text="Hotkey: Alt"/></tooltip>
	</ToggleButton>
	<ToggleButton fx:id="musiccollection" selected="true" text="Musiccollection" prefHeight="35" prefWidth="120" toggleGroup="$view" onAction="#switchToMusiccollection" style="-fx-border-width: 0 1 0 0;">
		<tooltip><Tooltip text="Hotkey: Alt"/></tooltip>
	</ToggleButton>
	<ToggleButton fx:id="settings" text = "Settings" prefHeight="35" prefWidth="80" toggleGroup="$view" onAction="#switchToSettings" style="-fx-border-width: 0 1 0 0;"/>
	<Region HBox.hgrow="ALWAYS" onMousePressed="#dragStarted" onMouseDragged="#dragExecuted"/>
	<ImageView fx:id="minimize" onMouseClicked="#minimize"/>
	<ImageView fx:id="close" onMouseClicked="#shutdown"/>
</HBox>

