<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ProgressBar?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<StackPane fx:id="splashRoot" fx:controller="application.controllers.SplashController" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" stylesheets="/resources/css/StyleClasses.css">
    <ImageView>
        <Image url="@/resources/icons/icon_phoenix_large.png"/>
    </ImageView>
    <VBox fx:id="splashContainer" spacing="3">
        <Label fx:id="splashLabel"/>
        <ProgressBar fx:id="splashProgress" progress="0"/>
    </VBox>
</StackPane>