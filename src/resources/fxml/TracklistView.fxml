<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<ListView fx:id="tracklist" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" prefHeight="800.0"
          prefWidth="200" fx:controller="application.controllers.TracklistController" onMouseClicked="#setLastSelected">
    <placeholder>
        <VBox fx:id="placeholderRoot" alignment="CENTER" spacing="5">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0"/>
            </padding>
            <Label text="Tracklist" style="-fx-font-weight: bold;"/>
            <Label text="Add Tracks from your collection (Double-click/Enter)"/>
            <Label text="and remove tracks (DEL)"/>
        </VBox>
    </placeholder>
</ListView>