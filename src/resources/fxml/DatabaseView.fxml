<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import utils.CustomTableColumn?>

<VBox fx:id="DatabaseView" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" fx:controller="application.controllers.DatabaseController">
	<StackPane>
		<TextField fx:id="search" promptText="search" onKeyReleased="#searchPressed"  style="-fx-font-size: 12pt; -fx-text-fill: black;"/>
		<ImageView fx:id="search_close" visible="false" StackPane.alignment="CENTER_RIGHT" translateX="-5" onMouseClicked="#deleteSearch"/>
	</StackPane>
	
	<TableView fx:id="tracks" VBox.vgrow="ALWAYS" onMouseClicked="#tracksPressed" onKeyReleased="#tracksEnter">
		<columns>
			<TableColumn text="TITLE">
				<cellFactory>
					<CustomTableColumn/>
				</cellFactory>
				<cellValueFactory>
        			<PropertyValueFactory property="title" />
      			</cellValueFactory>
			</TableColumn>
			<TableColumn text="ALBUMARTIST">
				<cellFactory>
					<CustomTableColumn/>
				</cellFactory>
				<cellValueFactory>
        			<PropertyValueFactory property="albumartist" />
      			</cellValueFactory>
			</TableColumn>
			<TableColumn text="ARTIST">
				<cellFactory>
					<CustomTableColumn/>
				</cellFactory>
				<cellValueFactory>
        			<PropertyValueFactory property="artist" />
      			</cellValueFactory>
			</TableColumn>
			<TableColumn text="ALBUM">
				<cellFactory>
					<CustomTableColumn/>
				</cellFactory>
				<cellValueFactory>
        			<PropertyValueFactory property="album" />
      			</cellValueFactory>
			</TableColumn>
			<TableColumn text="#">
				<cellFactory>
					<CustomTableColumn/>
				</cellFactory>
				<cellValueFactory>
        			<PropertyValueFactory property="trackNr" />
      			</cellValueFactory>
			</TableColumn>
			<TableColumn text="YEAR">
				<cellFactory>
					<CustomTableColumn/>
				</cellFactory>
				<cellValueFactory>
        			<PropertyValueFactory property="year" />
      			</cellValueFactory>
			</TableColumn>
			<TableColumn text="BPM">
				<cellFactory>
					<CustomTableColumn/>
				</cellFactory>
				<cellValueFactory>
        			<PropertyValueFactory property="bpm" />
      			</cellValueFactory>
			</TableColumn>
			<TableColumn text="RATING">
				<cellFactory>
					<CustomTableColumn/>
				</cellFactory>
				<cellValueFactory>
        			<PropertyValueFactory property="rating" />
      			</cellValueFactory>
			</TableColumn>
			<TableColumn text="PATH">
				<cellFactory>
					<CustomTableColumn/>
				</cellFactory>
				<cellValueFactory>
        			<PropertyValueFactory property="path" />
      			</cellValueFactory>
			</TableColumn>
		</columns>
	</TableView>
</VBox>